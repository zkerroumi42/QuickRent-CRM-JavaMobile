<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_property"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Property Image"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/tv_property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Property Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_property_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Property Description"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_contact_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/classic"
            android:text="Contact Owner"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
